{
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "batisteo.vscode-django",
        "ms-toolsai.jupyter",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "njpwerner.autodocstring"
      ],
      "settings": {
        "editor.rulers": [
          100
        ],
        "flake8.args": [
          "--max-line-length=100"
        ],
        "flake8.enabled": true,
        "python.linting.enabled": true
      }
    }
  },
  "dockerComposeFile": [
    "../../docker-compose.yml",
    "../docker-compose.yml"
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/backend,target=/workspaces/${localWorkspaceFolderBasename}/backend,type=bind"
  ],
  "name": "Dev Container for Backend",
  "remoteUser": "vscode",
  "service": "backend",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/backend"
}
